{
  "name": "upcloud-api-spec",
  "version": "1.0.0",
  "description": "Upcloud API specification",
  "main": "index.js",
  "repository": "git@github.com:UpCloudLtd/upcloud-api-spec.git",
  "author": "upcloud",
  "scripts": {
    "swagger-ui": "http-server ./node_modules/swagger-ui-dist",
    "start": "node app",
    "dev": "nodemon app",
    "validate": "curl -X POST -d @schema.json -H 'Content-Type:application/json' http://online.swagger.io/validator/debug",
    "generate-sdk:js": "java -jar swagger-codegen/modules/swagger-codegen-cli/target/swagger-codegen-cli.jar generate -i schema.json -l javascript -o sdk/javascript",
    "generate-sdk:csharp": "java -jar swagger-codegen/modules/swagger-codegen-cli/target/swagger-codegen-cli.jar generate -i schema.json -l csharp -o sdk/csharp",
    "generate-sdk:java": "java -jar swagger-codegen/modules/swagger-codegen-cli/target/swagger-codegen-cli.jar generate -i schema.json -l java -o sdk/java",
    "generate-sdk:php": "java -jar swagger-codegen/modules/swagger-codegen-cli/target/swagger-codegen-cli.jar generate -i schema.json -l php -o sdk/php",
    "generate-sdk:ruby": "java -jar swagger-codegen/modules/swagger-codegen-cli/target/swagger-codegen-cli.jar generate -i schema.json -l ruby -o sdk/ruby",
    "generate-sdk": "yarn generate-sdk:js && yarn generate-sdk:csharp && yarn generate-sdk:java && yarn generate-sdk:php && yarn generate-sdk:ruby"
  },
  "dependencies": {
    "http-server": "^0.10.0",
    "koa": "^2.3.0",
    "koa-static": "^4.0.1",
    "koa2-swagger-ui": "^2.5.6",
    "swagger-ui": "^3.1.5",
    "swagger-ui-dist": "^3.1.5"
  },
  "devDependencies": {
    "nodemon": "^1.11.0"
  }
}